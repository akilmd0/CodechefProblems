#include <bits/stdc++.h>
using namespace std;

#define MAX INT_MAX
#define MIN INT_MIN
#define ll long long int
#define nline "\n"
#define BIG 998244353
#define MOD 1000000007
#define fast_io ios_base::sync_with_stdio(false);cin.tie(NULL);cout.tie(NULL)
#define pii pair<ll,ll>
#define vi vector<ll>
#define vb vector<bool>
#define vc vector<char>
#define vs vector<string>
#define vvi vector<vi>
#define vpii vector<pii>
#define ff first
#define ss second
#define mkp make_pair
#define pb emplace_back

void solve()
{
    ll n,m;
    cin>>n>>m;
    string s;
    cin>>s;
    ll on=0, ze=0, ans=1;
    for(auto x: s){
        if(x=='1')on++;
        else ze++;
    }
    if(on==0)ans=m*n;
    else if((on*m)&1){
        cout<<"0\n";
        return;
    }
    else if(on&1 || !(m&1) ){
        for(int i=0; i<s.size();i++){
            if(s[i]=='0')
                ans++;
            else break;
        }
        for(int i=s.size()-1; i>=0; i--){
            if(s[i]=='0')ans++;
            else break;
        }
    }
    else if(m&1){
        ll k=on/2, i=0;
        while(k){
            if(s[i++]=='1')k--;
        }
        while(i<s.size()){
            if(s[i++]=='0')ans++;
            else break;
        }
    }
    cout<<ans<<nline;
}

int main()
{
    fast_io;

    int t=1;
    cin>>t;
    while(t--) 
        solve();
}
